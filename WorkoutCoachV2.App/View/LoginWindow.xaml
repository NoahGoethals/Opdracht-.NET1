<Window x:Class="WorkoutCoachV2.App.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="240" Width="360" WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Aanmelden" FontSize="18" FontWeight="Bold"/>

        <TextBox x:Name="UserBox" Grid.Row="2" Margin="0,4,0,0" />

        <PasswordBox x:Name="PwdBox" Grid.Row="4" Margin="0,4,0,0"/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Inloggen" Height="32" Width="100" Click="Login_Click" Margin="0,0,8,0"/>
            <Button Content="Sluiten" Height="32" Width="80" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
