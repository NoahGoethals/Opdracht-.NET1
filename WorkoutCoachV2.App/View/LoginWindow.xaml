<!-- Loginvenster:
     - Vraagt gebruikersnaam/e-mail + wachtwoord
     - Acties: Registreren (popup) en Login (naar MainWindow) -->
<Window x:Class="WorkoutCoachV2.App.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="260" Width="420"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Gebruikersnaam/e-mail -->
        <TextBlock Text="Gebruikersnaam of e-mail"/>
        <TextBox x:Name="tbUser" Grid.Row="2"/>

        <!-- Wachtwoordlabel + invoer -->
        <TextBlock Text="Wachtwoord" Grid.Row="4"/>
        <PasswordBox x:Name="tbPass" Grid.Row="4" Margin="0,22,0,0"/>

        <!-- Actieknoppen -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Registreren" Width="110" Margin="0,0,8,0" Click="BtnRegister_Click"/>
            <Button Content="Login" Width="110" Click="BtnLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
