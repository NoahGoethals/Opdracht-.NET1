<Window x:Class="WorkoutCoachV2.App.View.UserAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gebruikersbeheer" Height="520" Width="740" WindowStartupLocation="CenterOwner">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="Vernieuwen" Width="110" Click="BtnRefresh_Click"/>
            <Button Content="Opslaan" Width="110" Margin="8,0,0,0" Click="BtnSave_Click"/>
        </StackPanel>

        <DataGrid x:Name="dg" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="UserName" Binding="{Binding UserName}" Width="2*"/>
                <DataGridTextColumn Header="DisplayName" Binding="{Binding DisplayName}" Width="2*"/>
                <DataGridCheckBoxColumn Header="Blocked" Binding="{Binding IsBlocked}" Width="*"/>
                <DataGridComboBoxColumn Header="Rol" Width="*"
                                        SelectedValueBinding="{Binding Role, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        ItemsSource="{Binding Roles, RelativeSource={RelativeSource AncestorType=Window}}"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
