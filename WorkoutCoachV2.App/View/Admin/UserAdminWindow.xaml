<!-- Gebruikersbeheer venster: overzicht van users met DisplayName, blokkeren en rolkeuze. -->
<Window x:Class="WorkoutCoachV2.App.View.UserAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gebruikersbeheer" Height="520" Width="900"
        WindowStartupLocation="CenterOwner">

    <!-- Layout: bovenaan knoppenbalk, onderaan DataGrid -->
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Knoppenbalk -->
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="Vernieuwen" Width="120" Margin="0,0,8,0" Click="BtnRefresh_Click"/>
            <Button Content="Opslaan"    Width="120" Click="BtnSave_Click"/>
        </StackPanel>

        <!-- Tabel met gebruikers (gebonden aan ObservableCollection<Row> in code-behind) -->
        <DataGrid x:Name="dg"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  HeadersVisibility="Column"
                  RowHeaderWidth="0"
                  ItemsSource="{Binding Rows}">

            <!-- Kolommen: UserName (ro), DisplayName (editable), Blocked (checkbox), Rol (combobox in edit) -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="UserName"
                                    Binding="{Binding UserName}"
                                    IsReadOnly="True"
                                    Width="2*"/>

                <DataGridTextColumn Header="DisplayName"
                                    Binding="{Binding DisplayName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Width="2*"/>

                <DataGridCheckBoxColumn Header="Blocked"
                                        Binding="{Binding IsBlocked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="*"/>

                <!-- Rol weergave en bewerking via ComboBox (Admin/User) -->
                <DataGridTemplateColumn Header="Rol" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Role}" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <!-- Roles-property komt uit het Window (DataContext = this in code-behind) -->
                            <ComboBox ItemsSource="{Binding Roles, RelativeSource={RelativeSource AncestorType=Window}}"
                                      SelectedItem="{Binding Role, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      MinWidth="120"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
