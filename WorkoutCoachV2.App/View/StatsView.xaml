<UserControl x:Class="WorkoutCoachV2.App.View.StatsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Van:" Margin="0,0,6,0"/>
            <DatePicker x:Name="dpFrom" Grid.Column="1"/>

            <TextBlock Grid.Column="3" VerticalAlignment="Center" Text="Tot:" Margin="0,0,6,0"/>
            <DatePicker x:Name="dpTo" Grid.Column="4"/>

            <Button Grid.Column="6" x:Name="btnBereken" Width="110" Content="Bereken"
                    Click="btnBereken_Click"/>

            <TextBlock Grid.Column="7" x:Name="tbWeekVolume"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       Text="Weekvolume: 0"/>
        </Grid>

        <DataGrid x:Name="dgBest"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Oefening" Binding="{Binding Exercise}" Width="2*"/>
                <DataGridTextColumn Header="Gewicht" Binding="{Binding Weight}" Width="*" />
                <DataGridTextColumn Header="Reps" Binding="{Binding Reps}" Width="*" />
                <DataGridTextColumn Header="Datum"
                                    Binding="{Binding Date, StringFormat=\{0:yyyy-MM-dd\}}"
                                    Width="*" />
                <DataGridCheckBoxColumn Header="PR" Binding="{Binding IsPr}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
