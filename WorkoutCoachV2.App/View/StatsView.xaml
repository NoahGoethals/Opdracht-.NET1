<!--
  StatsView: overzicht van alle SessionSets voor snelle bewerking.
  Bovenbalk: Vernieuwen, Nieuw (pop-up voor losse set), Verwijderen.
  Tabel: Oefening, Gewicht, Reps, Datum (inline edit), PR (checkbox).
  Opmerking: er is GEEN 'Opslaan' knop in deze view.
-->
<UserControl x:Class="WorkoutCoachV2.App.View.StatsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="720" MinHeight="420">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Actieknoppen -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- Actieknoppen -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <!-- Herlaadt de grid vanuit DB -->
            <Button Content="Vernieuwen" Width="110" Click="BtnRefresh_Click"/>
            <!-- Opent NewStatEntryWindow (losse set toevoegen) -->
            <Button Content="Nieuw"      Width="110" Margin="8,0,0,0" Click="BtnNewRow_Click"/>
            <!-- Verwijdert geselecteerde rijen (incl. lege sessies) -->
            <Button Content="Verwijderen" Width="110" Margin="8,0,0,0" Click="BtnDelete_Click"/>
        </StackPanel>

        <!-- Overzichtstabel -->
        <DataGrid x:Name="dg"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="False"
                  SelectionMode="Extended"
                  Margin="0">
            <DataGrid.Columns>
                <!-- Alleen-lezen: naam komt uit gekoppelde Exercise -->
                <DataGridTextColumn Header="Oefening"
                                    Width="2*"
                                    Binding="{Binding ExerciseName}"
                                    IsReadOnly="True"/>

                <!-- Vrij aanpasbaar: gewicht in kg -->
                <DataGridTextColumn Header="Gewicht"
                                    Width="*"
                                    Binding="{Binding Weight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Vrij aanpasbaar: herhalingen -->
                <DataGridTextColumn Header="Reps"
                                    Width="*"
                                    Binding="{Binding Reps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Datum inline te editen via DatePicker -->
                <DataGridTemplateColumn Header="Datum" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Date, StringFormat={}{0:yyyy-MM-dd}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding Date, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <!-- PR-vlag (via reflectie in code-behind, 'IsPr' of 'Pr') -->
                <DataGridCheckBoxColumn Header="PR"
                                        Width="60"
                                        Binding="{Binding IsPr, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
