<Window x:Class="WorkoutCoachV2.App.View.EditWorkoutExercisesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Workout-inhoud" Height="640" Width="980"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="540" MinWidth="900">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Beschikbaar" Grid.Row="0" Grid.Column="0" Margin="0,0,12,0">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Zoek oefening:"/>
                    <TextBox x:Name="txtSearch"
                             Margin="0,4,0,0"
                             TextChanged="txtSearch_TextChanged"/>
                </StackPanel>

                <ListBox x:Name="lbAvailable"
                         Grid.Row="2"
                         SelectionMode="Single"
                         DisplayMemberPath="Name"/>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center">
            <Button x:Name="btnAdd" Content="Toevoegen →" Width="120" Margin="0,0,0,8"
                    Click="btnAdd_Click"/>
            <Button x:Name="btnRemove" Content="← Verwijderen" Width="120"
                    Click="btnRemove_Click"/>
        </StackPanel>

        <GroupBox Header="In workout" Grid.Row="0" Grid.Column="2" Margin="12,0,0,0">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Tip: pas Reps en Gewicht aan in de tabel rechts." />

                <DataGrid x:Name="dgInWorkout"
                          Grid.Row="2"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="False"
                          ItemsSource="{Binding}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Oefening"
                                            Binding="{Binding Exercise.Name}"
                                            IsReadOnly="True"
                                            Width="*"/>
                        <DataGridTextColumn Header="Reps"
                                            Binding="{Binding Reps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Width="120"/>
                        <DataGridTextColumn Header="Gewicht (kg)"
                                            Binding="{Binding WeightKg, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0.##}}"
                                            Width="140"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="btnSave" Content="Bewaren" Width="120" Margin="0,0,8,0" Click="btnSave_Click"/>
            <Button Content="Annuleer" Width="120" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
