<Window x:Class="WorkoutCoachV2.App.View.EditWorkoutExercisesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Workout-inhoud" Height="520" Width="820"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="3" Margin="0,0,0,8"
                   FontWeight="Bold" FontSize="16"
                   Text="Beheer oefeningen in deze workout"/>

        <GroupBox Header="Beschikbaar" Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="8,8,8,0">
                    <TextBlock Text="Zoek oefening:"/>
                    <TextBox x:Name="tbFilterLeft" Margin="0,4,0,0"
                             TextChanged="tbFilterLeft_TextChanged"/>
                </StackPanel>
                <ListBox x:Name="lbAvailable" Margin="8"
                         DisplayMemberPath="Name" SelectionMode="Single"/>
            </DockPanel>
        </GroupBox>

        <StackPanel Grid.Row="1" Grid.Column="1"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnAdd" Content="Toevoegen →" Width="110" Margin="0,0,0,8"
                    Click="btnAdd_Click"/>
            <Button x:Name="btnRemove" Content="← Verwijderen" Width="110"
                    Click="btnRemove_Click"/>
        </StackPanel>

        <GroupBox Header="In workout" Grid.Row="1" Grid.Column="2" Margin="10,0,0,0">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Margin="8,8,8,0" Foreground="Gray"
                           Text="Tip: pas Reps aan in de tabel rechts."/>
                <DataGrid x:Name="dgInWorkout" Margin="8"
                          AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Oefening" Width="*" IsReadOnly="True"
                                            Binding="{Binding Exercise.Name}"/>
                        <DataGridTextColumn Header="Reps" Width="100"
                                            Binding="{Binding Reps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </GroupBox>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Bewaren" Width="110" Margin="0,0,8,0"
                    IsDefault="True" Click="btnSave_Click"/>
            <Button Content="Annuleer" Width="110" IsCancel="True" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
