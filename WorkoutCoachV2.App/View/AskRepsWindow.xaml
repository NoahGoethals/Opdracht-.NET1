<!-- WorkoutCoachV2.App/View/AskRepsWindow.xaml -->
<Window x:Class="WorkoutCoachV2.App.View.AskRepsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reps kiezen" Height="170" Width="320"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Reps:" Margin="0,0,0,6"/>
        <TextBox x:Name="tbReps" Grid.Row="1" VerticalContentAlignment="Center"
                 PreviewTextInput="tbReps_PreviewTextInput"
                 DataObject.Pasting="tbReps_Pasting"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Bewaar" Width="100" Margin="0,0,8,0" IsDefault="True" Click="BtnOk_Click"/>
            <Button Content="Annuleer" Width="100" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
