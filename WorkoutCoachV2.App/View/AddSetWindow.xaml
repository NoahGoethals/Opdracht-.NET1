<!-- File: WorkoutCoachV2.App/View/AddSetWindow.xaml -->
<!-- Venster om een set toe te voegen/bewerken: Exercise, Reps, Weight(kg), RPE, Notes. -->
<Window x:Class="WorkoutCoachV2.App.View.AddSetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set" Height="260" Width="420" WindowStartupLocation="CenterOwner">

    <!-- Layout: labels links, inputs rechts; onderaan OK/Cancel -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Exercise keuze -->
        <TextBlock Text="Exercise" VerticalAlignment="Center"/>
        <ComboBox x:Name="ExerciseBox" Grid.Row="0" Margin="100,0,0,0" Height="28"/>

        <!-- Reps -->
        <TextBlock Grid.Row="1" Text="Reps" VerticalAlignment="Center"/>
        <TextBox x:Name="RepsBox" Grid.Row="1" Margin="100,0,0,0" Height="28"/>

        <!-- Weight -->
        <TextBlock Grid.Row="2" Text="Weight (kg)" VerticalAlignment="Center"/>
        <TextBox x:Name="WeightBox" Grid.Row="2" Margin="100,0,0,0" Height="28"/>

        <!-- RPE (optioneel) -->
        <TextBlock Grid.Row="3" Text="RPE" VerticalAlignment="Center"/>
        <TextBox x:Name="RpeBox" Grid.Row="3" Margin="100,0,0,0" Height="28"/>

        <!-- Notes (optioneel, multi-line) -->
        <TextBlock Grid.Row="4" Text="Notes" VerticalAlignment="Top"/>
        <TextBox x:Name="NotesBox" Grid.Row="4" Margin="100,0,0,0" AcceptsReturn="True" MinHeight="60" TextWrapping="Wrap"/>

        <!-- Actieknoppen -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Width="90" Margin="0,0,8,0" Click="Ok_Click"/>
            <Button Content="Cancel" Width="90" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
