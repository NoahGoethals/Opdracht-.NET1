<!-- Popup om een gewicht (kg) te vragen; eenvoudige layout met label, invoerveld en actieknoppen. -->
<Window x:Class="WorkoutCoachV2.App.View.AskWeightWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gewicht" Height="180" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" ShowInTaskbar="False">

    <!-- Hoofdgrid: invoer + knoppen -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Label + invoer (alleen cijfers, komma/punt; validatie in code-behind) -->
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Gewicht (kg):" Margin="0,0,0,6"/>
            <TextBox x:Name="txtWeight"
                     Height="28"
                     PreviewTextInput="txtWeight_PreviewTextInput"
                     TextChanged="txtWeight_TextChanged"/>
        </StackPanel>

        <!-- Actieknoppen -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Bewaar"   Width="110" Margin="0,0,8,0" IsDefault="True" Click="BtnSave_Click"/>
            <Button Content="Annuleer" Width="110" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
