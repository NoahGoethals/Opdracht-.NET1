<!-- Doel: eenvoudig registratievenster met username, e-mail, weergavenaam en wachtwoord + Registreer-knop. -->
<Window x:Class="WorkoutCoachV2.App.View.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registreren" Height="360" Width="480"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <!-- Layout: labels en inputs in rijen; onderaan een rij met wachtwoord + knop -->
    <Grid Margin="14">
        <!-- Rijen voor labels/inputs en de onderste knoppenrij -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- label: gebruikersnaam -->
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/> <!-- input: gebruikersnaam -->
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/> <!-- label: e-mail -->
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/> <!-- input: e-mail -->
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/> <!-- label: weergavenaam -->
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/> <!-- input: weergavenaam -->
            <RowDefinition Height="*" />   <!-- filler -->
            <RowDefinition Height="Auto"/> <!-- onderbalk: wachtwoord + registreer -->
        </Grid.RowDefinitions>

        <!-- Gebruikersnaam -->
        <TextBlock Grid.Row="0" Text="Gebruikersnaam"/>
        <TextBox   Grid.Row="2" x:Name="tbUser"/>

        <!-- E-mail -->
        <TextBlock Grid.Row="4" Text="E-mail"/>
        <TextBox   Grid.Row="6" x:Name="tbMail"/>

        <!-- Weergavenaam -->
        <TextBlock Grid.Row="8"  Text="Weergavenaam"/>
        <TextBox   Grid.Row="10" x:Name="tbDisplay"/>

        <!-- Onderbalk: wachtwoord naast knop -->
        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <TextBlock   Text="Wachtwoord" Margin="0,0,8,0" VerticalAlignment="Center"/>
            <PasswordBox x:Name="tbPass" Width="150" Margin="0,0,8,0"/>
            <Button      Content="Registreer" Width="110" Click="BtnRegister_Click"/>
        </StackPanel>
    </Grid>
</Window>
