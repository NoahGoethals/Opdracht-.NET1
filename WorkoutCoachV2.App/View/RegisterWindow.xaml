<Window x:Class="WorkoutCoachV2.App.View.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registreren" Height="360" Width="480" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Gebruikersnaam"/>
        <TextBox x:Name="tbUser" Grid.Row="2"/>

        <TextBlock Text="E-mail" Grid.Row="4"/>
        <TextBox x:Name="tbMail" Grid.Row="4" Margin="0,22,0,0"/>

        <TextBlock Text="Weergavenaam" Grid.Row="6"/>
        <TextBox x:Name="tbDisplay" Grid.Row="6" Margin="0,22,0,0"/>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
            <PasswordBox x:Name="tbPass" Width="150" Margin="0,0,8,0"/>
            <Button Content="Registreer" Width="110" Click="BtnRegister_Click"/>
        </StackPanel>
    </Grid>
</Window>
