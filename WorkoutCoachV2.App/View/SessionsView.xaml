<UserControl x:Class="WorkoutCoachV2.App.View.SessionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Width="110"
                    Content="Vernieuwen"
                    Click="btnRefresh_Click"/>

            <Button x:Name="btnNewFromWorkouts"
                    Grid.Column="1"
                    Margin="8,0,0,0"
                    Width="150"
                    Content="Nieuw uit workouts"
                    Click="btnNewFromWorkouts_Click"/>

            <Button x:Name="btnDelete"
                    Grid.Column="2"
                    Margin="8,0,0,0"
                    Width="110"
                    Content="Verwijderen"
                    Click="btnDelete_Click"/>
        </Grid>

        <DataGrid x:Name="dgSessions"
                  Grid.Row="1"
                  ItemsSource="{Binding Items}"
                  SelectedItem="{Binding Selected, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Titel"
                                    Binding="{Binding Title}"
                                    Width="2*"/>

                <DataGridTextColumn Header="Datum"
                                    Binding="{Binding Date, StringFormat=\{0:yyyy-MM-dd\}}"
                                    Width="*"/>

                <DataGridTextColumn Header="Beschrijving"
                                    Binding="{Binding Description}"
                                    Width="2*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="ToolTip" Value="{Binding Description}"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
