<UserControl x:Class="WorkoutCoachV2.App.View.SessionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Actie-balk -->
        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Width="110" Content="Vernieuwen"
                    Command="{Binding RefreshCmd}"/>

            <Button Grid.Column="1" Margin="8,0,0,0" Width="110" Content="Nieuw"
                    Command="{Binding AddCmd}"/>

            <Button x:Name="btnNewFromWorkouts"
                    Grid.Column="2" Margin="8,0,0,0" Width="150"
                    Content="Nieuw uit workouts"
                    Click="btnNewFromWorkouts_Click"/>

            <Button x:Name="btnDelete"
                    Grid.Column="3" Margin="8,0,0,0" Width="110"
                    Content="Verwijderen"
                    Click="btnDelete_Click"/>
        </Grid>

        <!-- Sessie-lijst -->
        <DataGrid x:Name="dgSessions"
                  Grid.Row="1"
                  ItemsSource="{Binding Items}"
                  SelectedItem="{Binding Selected, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Titel" Binding="{Binding Title}" Width="2*"/>

                <!-- Datum zonder converters: probeer meerdere property-namen via PriorityBinding -->
                <DataGridTemplateColumn Header="Datum" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <PriorityBinding StringFormat="{}{0:yyyy-MM-dd}">
                                        <Binding Path="ScheduledOn"/>
                                        <Binding Path="Date"/>
                                        <Binding Path="ScheduledAt"/>
                                        <Binding Path="PerformedOn"/>
                                        <Binding Path="CreatedAt"/>
                                    </PriorityBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Beschrijving i.p.v. 'Sets' – kies eerste beschikbare eigenschap -->
                <DataGridTemplateColumn Header="Beschrijving" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock TextWrapping="NoWrap" TextTrimming="CharacterEllipsis">
                                <TextBlock.Text>
                                    <PriorityBinding>
                                        <Binding Path="Description"/>
                                        <Binding Path="Notes"/>
                                        <Binding Path="Note"/>
                                        <Binding Path="Comment"/>
                                    </PriorityBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
