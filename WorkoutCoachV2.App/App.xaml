<!-- File: WorkoutCoachV2.App/App.xaml -->
<!-- App-resources: merge algemene styles (Styles.xaml) zodat alle vensters dezelfde styling gebruiken. -->
<Application x:Class="WorkoutCoachV2.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Koppel centrale styles -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
