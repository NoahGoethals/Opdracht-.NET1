<UserControl x:Class="WorkoutCoachV2.App.Controls.LabeledInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0"
                   Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   VerticalAlignment="Center"
                   Margin="0,0,8,0"/>

        <ContentPresenter Grid.Column="1"
                          Content="{Binding Input, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
    </Grid>
</UserControl>
