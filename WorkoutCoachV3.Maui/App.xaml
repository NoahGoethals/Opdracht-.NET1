<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:WorkoutCoachV3.Maui.Converters"
             x:Class="WorkoutCoachV3.Maui.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Globale converters zodat pages ze kunnen gebruiken via {StaticResource ...}. -->
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:StringNotNullOrEmptyConverter x:Key="StringNotNullOrEmptyConverter" />

            <ResourceDictionary.MergedDictionaries>
                <!-- Kleur-definities (light/dark theme) voor AppThemeBinding. -->
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <!-- Algemene styles (buttons/labels/etc) voor consistente UI. -->
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
