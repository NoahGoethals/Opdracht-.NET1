<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WorkoutCoachV3.Maui.Pages.SessionEditPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}">

    <Grid Padding="16">
        <ScrollView>
            <VerticalStackLayout Spacing="10">

                <Label Text="Title" FontAttributes="Bold" />
                <Entry Text="{Binding SessionTitle}" Placeholder="Session title..." />

                <Label Text="Date" FontAttributes="Bold" />
                <DatePicker Date="{Binding SessionDate}" />

                <Label Text="Description" FontAttributes="Bold" />
                <Editor Placeholder="Optional..."
                        AutoSize="TextChanges"
                        HeightRequest="90"
                        Text="{Binding Description}" />

                <Label Text="Select workouts"
                       FontAttributes="Bold"
                       Margin="0,6,0,0"/>

                <CollectionView ItemsSource="{Binding Workouts}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="Auto,*" Padding="8">
                                <CheckBox IsChecked="{Binding IsSelected}" />
                                <Label Grid.Column="1"
                                       Text="{Binding WorkoutTitle}"
                                       VerticalTextAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Grid ColumnDefinitions="*,*" Margin="0,12,0,0">
                    <Button Text="Save" Command="{Binding SaveCommand}" />
                    <Button Grid.Column="1" Text="Cancel" Command="{Binding CancelCommand}" />
                </Grid>

                <Label Text="{Binding Error}" TextColor="Red" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
