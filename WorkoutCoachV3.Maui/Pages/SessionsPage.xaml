<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WorkoutCoachV3.Maui.Pages.SessionsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="PageRoot"
    Title="Sessions">

    <Grid RowDefinitions="Auto,Auto,*" Padding="16" RowSpacing="12">

        <Grid Grid.Row="0" ColumnDefinitions="*,Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="8">
            <Label Text="Sessions"
                   FontSize="28"
                   VerticalOptions="Center" />

            <Button Grid.Column="1"
                    Text="Exercises"
                    Command="{Binding GoExercisesCommand}" />

            <Button Grid.Column="2"
                    Text="Workouts"
                    Command="{Binding GoWorkoutsCommand}" />

            <Button Grid.Column="3"
                    Text="Sessions"
                    IsEnabled="False"
                    BackgroundColor="#BDBDBD"
                    TextColor="Black" />

            <Button Grid.Column="4"
                    Text="Stats"
                    Command="{Binding GoToStatsCommand}" />

            <Button Grid.Column="5"
                    Text="Add"
                    Command="{Binding AddCommand}" />

            <Button Grid.Column="6"
                    Text="Logout"
                    Command="{Binding LogoutCommand}" />
        </Grid>

        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" ColumnSpacing="10">
            <Entry Placeholder="Search..."
                   Text="{Binding Search}"
                   ReturnType="Search"
                   ReturnCommand="{Binding LoadCommand}" />

            <Button Grid.Column="1"
                    Text="Search"
                    Command="{Binding LoadCommand}" />
        </Grid>

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems Mode="Reveal">
                                <SwipeItem Text="Edit"
                                           BackgroundColor="#3B82F6"
                                           Command="{Binding BindingContext.EditCommand, Source={x:Reference PageRoot}}"
                                           CommandParameter="{Binding SessionLocalId}" />

                                <SwipeItem Text="Delete"
                                           BackgroundColor="#EF4444"
                                           Command="{Binding BindingContext.DeleteCommand, Source={x:Reference PageRoot}}"
                                           CommandParameter="{Binding SessionLocalId}" />
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <Frame Margin="0,0,0,10"
                               Padding="14"
                               CornerRadius="12"
                               BorderColor="#DDD">

                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding BindingContext.OpenCommand, Source={x:Reference PageRoot}}"
                                    CommandParameter="{Binding SessionLocalId}" />
                            </Frame.GestureRecognizers>

                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding Title}"
                                       FontSize="18"
                                       FontAttributes="Bold" />

                                <Label Text="{Binding Date, StringFormat='{0:dd/MM/yyyy}'}"
                                       Opacity="0.6" />

                                <Label Text="Tap to open"
                                       FontSize="12"
                                       Opacity="0.6" />
                            </VerticalStackLayout>

                        </Frame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
