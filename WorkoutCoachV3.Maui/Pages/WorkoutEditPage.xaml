<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutCoachV3.Maui.Pages.WorkoutEditPage"
             Title="{Binding Title}">

    <VerticalStackLayout Padding="16" Spacing="12">

        <Label Text="{Binding Title}" FontSize="24" />

        <Entry Placeholder="Title"
               Text="{Binding WorkoutTitle}" />

        <Editor Placeholder="Notes (optional)"
                AutoSize="TextChanges"
                HeightRequest="120"
                Text="{Binding Notes}" />

        <Label Text="{Binding Error}"
               TextColor="Red"
               IsVisible="{Binding Error, Converter={StaticResource StringNotNullOrEmptyConverter}}" />

        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
            <Button Text="Cancel"
                    Command="{Binding CancelCommand}" />

            <Button Grid.Column="1"
                    Text="Save"
                    Command="{Binding SaveCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" />
        </Grid>

    </VerticalStackLayout>
</ContentPage>
