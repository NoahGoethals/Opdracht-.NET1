<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutCoachV3.Maui.Pages.WorkoutExercisesManagePage"
             Title="Manage Exercises">

    <Grid RowDefinitions="Auto,*,Auto" Padding="16" RowSpacing="12">

        <Label Grid.Row="0"
               Text="{Binding Error}"
               TextColor="Red" />

        <CollectionView Grid.Row="1" ItemsSource="{Binding Rows}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,0,0,10"
                           Padding="12"
                           CornerRadius="12"
                           BorderColor="#DDD">
                        <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="12" RowDefinitions="Auto,Auto">
                            <CheckBox Grid.RowSpan="2"
                                      IsChecked="{Binding IsInWorkout}" />

                            <Label Grid.Column="1"
                                   Text="{Binding Name}"
                                   FontAttributes="Bold" />

                            <Label Grid.Row="1" Grid.Column="1"
                                   Text="Reps / Weight (kg)"
                                   FontSize="12"
                                   Opacity="0.6" />

                            <Entry Grid.Column="2"
                                   Placeholder="Reps"
                                   Keyboard="Numeric"
                                   Text="{Binding RepetitionsText}" />

                            <Entry Grid.Column="3"
                                   Placeholder="Kg"
                                   Keyboard="Numeric"
                                   Text="{Binding WeightText}" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="10">
            <Button Text="Save" Command="{Binding SaveCommand}" />
            <Button Grid.Column="1" Text="Cancel" Command="{Binding CancelCommand}" />
        </Grid>

    </Grid>
</ContentPage>
