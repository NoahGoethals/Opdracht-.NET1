<?xml version="1.0" encoding="utf-8" ?>
<!-- Admin overzichtspagina: navigatie + userbeheer (rollen/block) -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutCoachV3.Maui.Pages.AdminPanelPage"
             x:Name="PageRoot"
             Title="Admin">

    <!-- Hoofdlayout: header, statusbalk, lijst -->
    <Grid RowDefinitions="Auto,Auto,*" Padding="16" RowSpacing="12">

        <!-- Header: titel + horizontale navigatieknoppen -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*" ColumnSpacing="12">
            <Label Text="Admin"
                   FontSize="{OnIdiom Phone=20, Default=28}"
                   VerticalOptions="Center" />

            <ScrollView Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalScrollBarVisibility="Never">
                <!-- Navigation via ViewModel commands -->
                <HorizontalStackLayout Spacing="8">
                    <Button Text="Exercises" Command="{Binding GoToExercisesCommand}" />
                    <Button Text="Workouts"  Command="{Binding GoToWorkoutsCommand}" />
                    <Button Text="Sessions"  Command="{Binding GoToSessionsCommand}" />
                    <Button Text="Stats"     Command="{Binding GoToStatsCommand}" />

                    <!-- Admin-knop: enkel zichtbaar als user admin-rechten heeft -->
                    <Button Text="Admin"
                            IsEnabled="False"
                            IsVisible="{Binding CanAccessAdmin}" />

                    <Button Text="Logout" Command="{Binding LogoutCommand}" />
                </HorizontalStackLayout>
            </ScrollView>
        </Grid>

        <!-- Status: busy indicator + foutmelding -->
        <HorizontalStackLayout Grid.Row="1" Spacing="12">
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
            <Label Text="{Binding ErrorMessage}" TextColor="Red" VerticalOptions="Center" />
        </HorizontalStackLayout>

        <!-- Users lijst: per user rol wijzigen en block togglen -->
        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Users}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="12"
                           Margin="0,6"
                           HasShadow="False"
                           BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                           BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#333333}"
                           CornerRadius="12">

                        <VerticalStackLayout Spacing="10">

                            <!-- Basisinfo: email, displayname, blocked status -->
                            <VerticalStackLayout Spacing="2">
                                <Label FontAttributes="Bold" Text="{Binding Email}" />
                                <Label Text="{Binding DisplayName}" Opacity="0.8" />
                                <Label Text="{Binding IsBlocked, StringFormat='Blocked: {0}'}" Opacity="0.7" />
                            </VerticalStackLayout>

                            <!-- Rol picker: opties komen van PageRoot.BindingContext (AdminPanelViewModel) -->
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                <Label Grid.Column="0" Text="Role:" VerticalOptions="Center" />
                                <Picker Grid.Column="1"
                                        ItemsSource="{Binding Source={x:Reference PageRoot}, Path=BindingContext.RoleOptions}"
                                        SelectedItem="{Binding SelectedRole}" />
                            </Grid>

                            <!-- Acties: rol opslaan of blokkeren/deblokkeren -->
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                <Button Grid.Column="0"
                                        Text="Save role"
                                        Command="{Binding Source={x:Reference PageRoot}, Path=BindingContext.SaveRoleCommand}"
                                        CommandParameter="{Binding .}" />

                                <Button Grid.Column="1"
                                        Text="Toggle block"
                                        Command="{Binding Source={x:Reference PageRoot}, Path=BindingContext.ToggleBlockCommand}"
                                        CommandParameter="{Binding .}" />
                            </Grid>

                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
