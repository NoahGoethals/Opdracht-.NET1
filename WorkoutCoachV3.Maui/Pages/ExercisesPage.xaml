<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutCoachV3.Maui.Pages.ExercisesPage"
             Title="Exercises">

    <Grid RowDefinitions="Auto,Auto,Auto,*" Padding="16" RowSpacing="12">

        <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto" Grid.Row="0">
            <Label Text="Exercises" FontSize="28" VerticalOptions="Center" />

            <Button Grid.Column="1"
                    Text="Workouts"
                    Command="{Binding GoToWorkoutsCommand}"
                    Margin="8,0,0,0"/>

            <Button Grid.Column="2"
                    Text="Sessions"
                    Command="{Binding GoToSessionsCommand}"
                    Margin="8,0,0,0"/>

            <Button Grid.Column="3"
                    Text="Add"
                    Command="{Binding AddCommand}"
                    Margin="8,0,0,0"/>

            <Button Grid.Column="4"
                    Text="Logout"
                    Command="{Binding LogoutCommand}"
                    Margin="8,0,0,0"/>
        </Grid>

        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" ColumnSpacing="10">
            <Entry Placeholder="Search..."
                   Text="{Binding SearchText}"
                   ReturnType="Search"
                   ReturnCommand="{Binding LoadLocalCommand}" />

            <Button Grid.Column="1"
                    Text="Search"
                    Command="{Binding LoadLocalCommand}" />
        </Grid>

        <Grid Grid.Row="2" ColumnDefinitions="Auto,*" ColumnSpacing="10">
            <Label Text="Category:" VerticalOptions="Center"/>
            <Picker Grid.Column="1"
                    ItemsSource="{Binding Categories}"
                    SelectedItem="{Binding SelectedCategory}" />
        </Grid>

        <RefreshView Grid.Row="3"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommandCommand}">
            <CollectionView ItemsSource="{Binding Items}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <SwipeView>

                            <SwipeView.RightItems>
                                <SwipeItems Mode="Reveal">
                                    <SwipeItem Text="Edit"
                                               BackgroundColor="#3B82F6"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditCommand}"
                                               CommandParameter="{Binding .}" />

                                    <SwipeItem Text="Delete"
                                               BackgroundColor="#EF4444"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteCommand}"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Frame Margin="0,0,0,10"
                                   Padding="14"
                                   CornerRadius="12"
                                   BorderColor="#DDD">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="{Binding Name}" FontSize="18"/>
                                    <Label Text="{Binding Category}" FontAttributes="Italic"/>
                                    <Label Text="{Binding Notes}" />
                                </VerticalStackLayout>
                            </Frame>

                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

    </Grid>
</ContentPage>
