<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WorkoutCoachV3.Maui.Pages.ExercisesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="PageRoot"
    Title="Exercises">

    <Grid RowDefinitions="Auto,Auto,*" Padding="16" RowSpacing="12">

        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
            <Label
                Text="Exercises"
                FontSize="{OnIdiom Phone=20, Default=28}"
                VerticalOptions="Center" />

            <ScrollView Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalScrollBarVisibility="Never">
                <HorizontalStackLayout Spacing="8">
                    <Button Text="Exercises" IsEnabled="False" />
                    <Button Text="Workouts" Command="{Binding GoWorkoutsCommand}" />
                    <Button Text="Sessions" Command="{Binding GoSessionsCommand}" />
                    <Button Text="Stats" Command="{Binding GoToStatsCommand}" />

                    <Button Text="Admin"
                            Command="{Binding GoToAdminCommand}"
                            IsVisible="{Binding CanAccessAdmin}" />

                    <Button Text="Add" Command="{Binding AddCommand}" />
                    <Button Text="Logout" Command="{Binding LogoutCommand}" />
                </HorizontalStackLayout>
            </ScrollView>
        </Grid>

        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" ColumnSpacing="10">
            <Entry Placeholder="Search..."
                   Text="{Binding SearchText}"
                   ReturnType="Search"
                   ReturnCommand="{Binding LoadLocalCommand}" />

            <Button Grid.Column="1"
                    Text="Search"
                    Command="{Binding LoadLocalCommand}" />
        </Grid>

        <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="12" RowDefinitions="Auto,*">
            <VerticalStackLayout Grid.Column="0" Spacing="6">
                <Label Text="Category:" FontAttributes="Bold" />
                <Picker ItemsSource="{Binding Categories}"
                        SelectedItem="{Binding SelectedCategory}" />
            </VerticalStackLayout>

            <Button Grid.Column="1"
                    Text="Reload"
                    Command="{Binding LoadLocalCommand}"
                    VerticalOptions="End" />

            <CollectionView Grid.Row="1"
                            Grid.ColumnSpan="2"
                            ItemsSource="{Binding Items}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>

                            <SwipeView.RightItems>
                                <SwipeItems Mode="Reveal">
                                    <SwipeItem Text="Edit"
                                               BackgroundColor="#3B82F6"
                                               Command="{Binding BindingContext.EditCommand, Source={x:Reference PageRoot}}"
                                               CommandParameter="{Binding .}" />

                                    <SwipeItem Text="Delete"
                                               BackgroundColor="#EF4444"
                                               Command="{Binding BindingContext.DeleteCommand, Source={x:Reference PageRoot}}"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Frame Margin="0,0,0,10"
                                   Padding="14"
                                   CornerRadius="12"
                                   HasShadow="False"
                                   BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                                   BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#333333}">

                                <VerticalStackLayout Spacing="4">
                                    <Label Text="{Binding Name}"
                                           FontSize="18"
                                           FontAttributes="Bold" />

                                    <Label Text="{Binding Category}"
                                           Opacity="0.7" />

                                    <Label Text="{Binding Notes}"
                                           FontAttributes="Italic"
                                           Opacity="0.8" />
                                </VerticalStackLayout>
                            </Frame>

                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

    </Grid>
</ContentPage>
