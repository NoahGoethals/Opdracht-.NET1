<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutCoachV3.Maui.Pages.WorkoutsPage"
             x:Name="PageRoot"
             Title="Workouts">

    <Grid RowDefinitions="Auto,Auto,*" Padding="16" RowSpacing="12">

        <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="8">
            <Label Text="Workouts" FontSize="28" VerticalOptions="Center" />

            <Button Grid.Column="1" Text="Exercises" Command="{Binding GoExercisesCommand}" Margin="8,0,0,0"/>
            <Button Grid.Column="2" Text="Workouts" IsEnabled="False" Margin="8,0,0,0"/>
            <Button Grid.Column="3" Text="Sessions" Command="{Binding GoSessionsCommand}" Margin="8,0,0,0"/>
            <Button Grid.Column="4" Text="Stats" Command="{Binding GoToStatsCommand}" Margin="8,0,0,0"/>

            <Button Grid.Column="5"
            Text="Admin"
            Command="{Binding GoToAdminCommand}"
            IsVisible="{Binding CanAccessAdmin}"
            Margin="8,0,0,0"/>

            <Button Grid.Column="6" Text="Add" Command="{Binding AddCommand}" Margin="8,0,0,0"/>
            <Button Grid.Column="7" Text="Logout" Command="{Binding LogoutCommand}" Margin="8,0,0,0"/>
        </Grid>


        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" ColumnSpacing="10">
            <Entry Placeholder="Search..."
                   Text="{Binding SearchText}"
                   ReturnType="Search"
                   ReturnCommand="{Binding LoadLocalCommand}" />

            <Button Grid.Column="1"
                    Text="Search"
                    Command="{Binding LoadLocalCommand}" />
        </Grid>

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate>

                    <SwipeView>

                        <SwipeView.RightItems>
                            <SwipeItems Mode="Reveal">

                                <SwipeItem Text="Edit"
                                           BackgroundColor="#3B82F6"
                                           Command="{Binding BindingContext.EditCommand, Source={x:Reference PageRoot}}"
                                           CommandParameter="{Binding .}" />

                                <SwipeItem Text="Delete"
                                           BackgroundColor="#EF4444"
                                           Command="{Binding BindingContext.DeleteCommand, Source={x:Reference PageRoot}}"
                                           CommandParameter="{Binding .}" />

                            </SwipeItems>
                        </SwipeView.RightItems>

                        <Frame Margin="0,0,0,10"
                               Padding="14"
                               CornerRadius="12"
                               BorderColor="#DDD">

                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding BindingContext.OpenDetailCommand, Source={x:Reference PageRoot}}"
                                                      CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>

                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding Title}" FontSize="18" />
                                <Label Text="{Binding Notes}" FontAttributes="Italic" />
                                <Label Text="Tap to open"
                                       FontSize="12"
                                       Opacity="0.6" />
                            </VerticalStackLayout>
                        </Frame>

                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
