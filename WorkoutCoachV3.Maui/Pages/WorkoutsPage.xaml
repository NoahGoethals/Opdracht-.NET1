<?xml version="1.0" encoding="utf-8" ?>
<!-- Workouts overzicht: navigatie + zoeken + swipe edit/delete + tap open -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutCoachV3.Maui.Pages.WorkoutsPage"
             x:Name="PageRoot"
             Title="Workouts">

    <!-- Layout: header, search, lijst -->
    <Grid RowDefinitions="Auto,Auto,*" Padding="16" RowSpacing="12">

        <!-- Header + menu knoppen -->
        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
            <Label Text="Workouts"
                   FontSize="{OnIdiom Phone=20, Default=28}"
                   VerticalOptions="Center" />

            <ScrollView Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalScrollBarVisibility="Never">
                <HorizontalStackLayout Spacing="8">
                    <Button Text="Exercises" Command="{Binding GoExercisesCommand}" />
                    <Button Text="Workouts" IsEnabled="False" />
                    <Button Text="Sessions" Command="{Binding GoSessionsCommand}" />
                    <Button Text="Stats" Command="{Binding GoToStatsCommand}" />

                    <!-- Admin enkel zichtbaar voor admins -->
                    <Button Text="Admin"
                            Command="{Binding GoToAdminCommand}"
                            IsVisible="{Binding CanAccessAdmin}" />

                    <Button Text="Add" Command="{Binding AddCommand}" />
                    <Button Text="Logout" Command="{Binding LogoutCommand}" />
                </HorizontalStackLayout>
            </ScrollView>
        </Grid>

        <!-- Search: Enter of knop triggert LoadLocalCommand -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" ColumnSpacing="10">
            <Entry Placeholder="Search..."
                   Text="{Binding SearchText}"
                   ReturnType="Search"
                   ReturnCommand="{Binding LoadLocalCommand}" />

            <Button Grid.Column="1"
                    Text="Search"
                    Command="{Binding LoadLocalCommand}" />
        </Grid>

        <!-- Workouts lijst -->
        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate>

                    <SwipeView>
                        <!-- Swipe rechts: edit/delete via PageRoot commands -->
                        <SwipeView.RightItems>
                            <SwipeItems Mode="Reveal">
                                <SwipeItem Text="Edit"
                                           BackgroundColor="#3B82F6"
                                           Command="{Binding BindingContext.EditCommand, Source={x:Reference PageRoot}}"
                                           CommandParameter="{Binding .}" />

                                <SwipeItem Text="Delete"
                                           BackgroundColor="#EF4444"
                                           Command="{Binding BindingContext.DeleteCommand, Source={x:Reference PageRoot}}"
                                           CommandParameter="{Binding .}" />
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <!-- Card: tap opent detail -->
                        <Frame Margin="0,0,0,10"
                               Padding="14"
                               CornerRadius="12"
                               HasShadow="False"
                               BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                               BorderColor="{AppThemeBinding Light=#DDDDDD, Dark=#333333}">

                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding BindingContext.OpenDetailCommand, Source={x:Reference PageRoot}}"
                                                      CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>

                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding Notes}" FontAttributes="Italic" Opacity="0.8"/>
                                <Label Text="Tap to open" FontSize="12" Opacity="0.6" />
                            </VerticalStackLayout>
                        </Frame>

                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
