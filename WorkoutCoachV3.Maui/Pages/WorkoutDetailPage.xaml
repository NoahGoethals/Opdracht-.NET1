<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutCoachV3.Maui.Pages.WorkoutDetailPage"
             Title="Workout">

    <Grid RowDefinitions="Auto,Auto,*" Padding="16" RowSpacing="12">

        <Grid ColumnDefinitions="*,Auto" Grid.Row="0">
            <VerticalStackLayout Spacing="4">
                <Label Text="{Binding WorkoutTitle}" FontSize="28"/>
                <Label Text="{Binding Notes}" Opacity="0.7"/>
                <Label Text="{Binding Error}" TextColor="Red" />
            </VerticalStackLayout>

            <Button Grid.Column="1"
                    Text="Manage"
                    Command="{Binding ManageCommand}" />
        </Grid>

        <Label Grid.Row="1"
               Text="Exercises in this workout"
               FontAttributes="Bold"
               FontSize="16" />

        <CollectionView Grid.Row="2" ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,0,0,10"
                           Padding="14"
                           CornerRadius="12"
                           BorderColor="#DDD">
                        <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="14">
                            <Label Text="{Binding Name}" FontSize="16"/>
                            <Label Grid.Column="1" Text="{Binding Repetitions}" />
                            <Label Grid.Column="2" Text="{Binding WeightKg}" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
