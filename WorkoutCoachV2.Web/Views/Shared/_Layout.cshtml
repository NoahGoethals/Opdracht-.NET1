@using System.Globalization
@using Microsoft.AspNetCore.Identity
@using Microsoft.Extensions.Localization
@using WorkoutCoachV2.Model.Models
@using WorkoutCoachV2.Web

@inject SignInManager<ApplicationUser> SignInManager          // Identity helper: checkt of iemand ingelogd is
@inject UserManager<ApplicationUser> UserManager              // Identity helper: haalt user info op (DisplayName, roles, ...)
@inject IStringLocalizer<SharedResource> L                    // Vertalingen (NL/EN/FR) via resource keys

@{
    // Paginatitel opbouwen: "X - WorkoutCoach" of gewoon "WorkoutCoach"
    var pageTitle = ViewData["Title"] as string;
    var fullTitle = string.IsNullOrWhiteSpace(pageTitle)
        ? "WorkoutCoach"
        : $"{pageTitle} - WorkoutCoach";

    // Check of de user ingelogd is
    var isSignedIn = SignInManager.IsSignedIn(User);
    var displayName = "";

    // Als ingelogd: haal de huidige user op en kies DisplayName → UserName → ""
    if (isSignedIn)
    {
        var currentUser = await UserManager.GetUserAsync(User);
        displayName = currentUser?.DisplayName ?? currentUser?.UserName ?? "";
    }

    // Huidige taal/cultuur (bv "nl", "en", "fr")
    var currentCulture = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;

    // ReturnUrl: waar je nu zit (path + query), zodat je na taalwissel terugkomt op dezelfde pagina
    var returnUrl = Context.Request.Path + Context.Request.QueryString;
}

<!DOCTYPE html>
<html lang="@currentCulture">
 <!-- Zet de html-lang op de huidige UI taal -->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@fullTitle</title> <!-- Dynamische titel -->
    <!-- Bootstrap + site css -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WorkoutCoachV2.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Navigatiebalk bovenaan -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <!-- Logo/brand -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WorkoutCoach</a>

                <!-- Hamburger menu knop voor mobiel -->
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- Linker menu -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <!-- Home link (vertaald) -->
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@L["Home"]</a>
                        </li>

                        @if (isSignedIn)
                        {
                            <!-- Alleen zichtbaar als ingelogd -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Exercises" asp-action="Index">@L["Exercises"]</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Workouts" asp-action="Index">@L["Workouts"]</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Sessions" asp-action="Index">@L["Sessions"]</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Stats" asp-action="Index">@L["Stats"]</a>
                            </li>

                            @* ✅ Admin menu voor Admin én Moderator *@
                            @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                            {
                                <!-- Admin link enkel als je Admin of Moderator role hebt -->
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">@L["Admin"]</a>
                                </li>
                            }
                        }

                        <!-- Privacy is altijd zichtbaar -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@L["Privacy"]</a>
                        </li>
                    </ul>

                    <!-- Rechter menu (taal + login/logout) -->
                    <ul class="navbar-nav align-items-center">
                        <!-- Taal dropdown -->
                        <li class="nav-item dropdown me-2">
                            <a class="btn btn-sm btn-outline-secondary dropdown-toggle"
                               href="#"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="false">
                                @L["Language"]: @(currentCulture.ToUpper()) <!-- toont bv: Language: NL -->
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <!-- Wissel naar NL en keer terug naar huidige pagina -->
                                    <a class="dropdown-item"
                                       asp-controller="Language"
                                       asp-action="Set"
                                       asp-route-culture="nl"
                                       asp-route-returnUrl="@returnUrl">
                                        @L["Dutch"]
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Language"
                                       asp-action="Set"
                                       asp-route-culture="en"
                                       asp-route-returnUrl="@returnUrl">
                                        @L["English"]
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Language"
                                       asp-action="Set"
                                       asp-route-culture="fr"
                                       asp-route-returnUrl="@returnUrl">
                                        @L["French"]
                                    </a>
                                </li>
                            </ul>
                        </li>

                        @if (isSignedIn)
                        {
                            <!-- Toon "Logged in as ..." -->
                            <li class="nav-item me-2">
                                <span class="navbar-text text-muted small">
                                    @L["LoggedInAs", displayName]
                                </span>
                            </li>

                            <!-- Logout knop (POST + antiforgery) -->
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">@L["Logout"]</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <!-- Als niet ingelogd: Login + Register knoppen -->
                            <li class="nav-item me-2">
                                <a class="btn btn-sm btn-outline-primary" asp-controller="Account" asp-action="Login">@L["Login"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-sm btn-primary" asp-controller="Account" asp-action="Register">@L["Register"]</a>
                            </li>
                        }

                        <!-- Kleine footer tekst in de navbar (alleen op md+) -->
                        <li class="nav-item ms-3 d-none d-md-inline">
                            <span class="navbar-text text-muted small">.NET Advanced – WorkoutCoach</span>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <!-- Hoofdcontent container -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() <!-- Hier komt de inhoud van elke view -->
        </main>
    </div>

    <!-- Footer onderaan -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - WorkoutCoach -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">@L["Privacy"]</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false) <!-- Optionele extra scripts per view -->
</body>
</html>
