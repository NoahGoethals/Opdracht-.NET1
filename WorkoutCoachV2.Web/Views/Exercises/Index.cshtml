@model IEnumerable<WorkoutCoachV2.Model.Models.Exercise>
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    // Index view: overzicht van oefeningen met zoek-, filter- en sorteeropties (via querystring), alles vertaald via SharedResource.
    ViewData["Title"] = L["Ex_Index_Title"];

    var categories = ViewBag.CategoryOptions as List<string> ?? new List<string>();
    var currentSearch = ViewData["Search"]?.ToString() ?? "";
    var currentCategory = ViewData["Category"]?.ToString() ?? "";
    var currentSort = ViewData["Sort"]?.ToString() ?? "name_asc";
}

<h1>@L["Ex_Index_H1"]</h1>

<div class="mb-3">
    // Knop naar create-pagina.
    <a asp-action="Create" class="btn btn-primary">@L["Ex_CreateNew"]</a>
</div>

<form method="get" class="row g-2 align-items-end mb-3">
    <div class="col-md-4">
        // Zoekveld op naam.
        <label class="form-label">@L["Common_Search"]</label>
        <input name="search" value="@currentSearch" class="form-control" />
    </div>

    <div class="col-md-3">
        // Dropdown filter op categorie; opties komen uit ViewBag (opgebouwd in controller).
        <label class="form-label">@L["Ex_Field_Category"]</label>
        <select name="category" class="form-select">
            <option value="">@L["Common_All"]</option>
            @foreach (var c in categories)
            {
                <option value="@c" selected="@(c == currentCategory ? "selected" : null)">@c</option>
            }
        </select>
    </div>

    <div class="col-md-3">
        // Dropdown sortering (naam/categorie, asc/desc).
        <label class="form-label">@L["Common_Sort"]</label>
        <select name="sort" class="form-select">
            <option value="name_asc" selected="@(currentSort == "name_asc" ? "selected" : null)">@L["Ex_Field_Name"] (A→Z)</option>
            <option value="name_desc" selected="@(currentSort == "name_desc" ? "selected" : null)">@L["Ex_Field_Name"] (Z→A)</option>
            <option value="cat_asc" selected="@(currentSort == "cat_asc" ? "selected" : null)">@L["Ex_Field_Category"] (A→Z)</option>
            <option value="cat_desc" selected="@(currentSort == "cat_desc" ? "selected" : null)">@L["Ex_Field_Category"] (Z→A)</option>
        </select>
    </div>

    <div class="col-md-2 d-flex gap-2">
        // Apply stuurt filters mee; reset gaat terug naar index zonder querystring.
        <button type="submit" class="btn btn-outline-primary w-100">@L["Common_Apply"]</button>
        <a asp-action="Index" class="btn btn-outline-secondary w-100">@L["Common_Reset"]</a>
    </div>
</form>

@if (Model == null || !Model.Any())
{
    // Lege state wanneer er geen oefeningen zijn.
    <p class="text-muted">@L["Ex_NoExercises"]</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>@L["Ex_Field_Name"]</th>
                <th>@L["Ex_Field_Category"]</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    // Tabel toont naam + categorie en links naar details/edit/delete.
                    <td>@Html.DisplayFor(_ => item.Name)</td>
                    <td>@Html.DisplayFor(_ => item.Category)</td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.Id">@L["Common_Details"]</a> |
                        <a asp-action="Edit" asp-route-id="@item.Id">@L["Common_Edit"]</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">@L["Common_Delete"]</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
