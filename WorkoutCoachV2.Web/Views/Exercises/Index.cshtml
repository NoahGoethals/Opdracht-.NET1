@model IEnumerable<WorkoutCoachV2.Model.Models.Exercise>

@{
    ViewData["Title"] = "Exercises";
}

<h1>Exercises</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New Exercise</a>
</div>

@if (Model == null || !Model.Any())
{
    <p class="text-muted">No exercises yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Category)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(_ => item.Name)</td>
                    <td>@Html.DisplayFor(_ => item.Category)</td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
