@model WorkoutCoachV2.Model.Models.Exercise

@using Microsoft.Extensions.Localization
@using WorkoutCoachV2.Web
@inject IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = L["Ex_Details_Title"];
}

<h1>@L["Ex_Details_H1"]</h1>

<div>
    <h4>@L["Common_Exercise"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">@L["Common_Edit"]</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">@L["Common_BackToList"]</a>
</div>
