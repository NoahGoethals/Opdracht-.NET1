@model WorkoutCoachV2.Model.Models.Exercise
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    // Details view: toont alle details van één oefening, met knoppen om te bewerken of terug te gaan.
    ViewData["Title"] = L["Ex_Details_Title"];
}

<h1>@L["Ex_Details_H1"]</h1>
<h4 class="text-muted">@Model.Name</h4>
<hr />

<div>
    <dl class="row">
        // Read-only overzicht van de oefening.
        <dt class="col-sm-2">@L["Ex_Field_Name"]</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-2">@L["Ex_Field_Category"]</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Category)</dd>

        <dt class="col-sm-2">@L["Ex_Field_Notes"]</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Notes)</dd>

        <dt class="col-sm-2">@L["Ex_Field_CreatedAt"]</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CreatedAt)</dd>
    </dl>
</div>

<div>
    // Navigatie: naar edit of terug naar index.
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">@L["Common_Edit"]</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">@L["Common_BackToList"]</a>
</div>
