@model WorkoutCoachV2.Model.Models.Exercise
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    // Edit view: formulier om een bestaande oefening aan te passen, met validatie en vertalingen.
    ViewData["Title"] = L["Ex_Edit_Title"];
}

<h1>@L["Ex_Edit_H1"]</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            // Hidden Id zodat de controller weet welke oefening aangepast wordt.
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                // Naam van de oefening.
                <label asp-for="Name" class="control-label">@L["Ex_Field_Name"]</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                // Categorie om te kunnen filteren/sorteren.
                <label asp-for="Category" class="control-label">@L["Ex_Field_Category"]</label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                // Notities voor extra info.
                <label asp-for="Notes" class="control-label">@L["Ex_Field_Notes"]</label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                // Opslaan of terug naar overzicht.
                <input type="submit" value="@L["Common_Save"]" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">@L["Common_BackToList"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        // Client-side validatie scripts.
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
