@model WorkoutCoachV2.Model.Models.Workout                 // Model = Workout object
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L 

@{
    ViewData["Title"] = L["Wk_Create_Title"];              // Titel voor de pagina (layout gebruikt dit)
}

<h1>@L["Wk_Create_H1"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <!-- Post naar WorkoutsController.Create (POST) -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- Toon model errors -->

            <div class="form-group">
                <label asp-for="Title" class="control-label">@L["Wk_Field_Title"]</label> <!-- Label -->
                <input asp-for="Title" class="form-control" />                              <!-- Input bindt naar Title -->
                <span asp-validation-for="Title" class="text-danger"></span>               <!-- Validatie error -->
            </div>

            <div class="form-group">
                <label asp-for="ScheduledOn" class="control-label">@L["Wk_Field_ScheduledOn"]</label>
                <input asp-for="ScheduledOn" class="form-control" />                       <!-- Datum/tekst input voor ScheduledOn -->
                <span asp-validation-for="ScheduledOn" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="@L["Common_Create"]" class="btn btn-primary" /> <!-- Submit -->
                <a asp-action="Index" class="btn btn-secondary">@L["Common_Cancel"]</a>      <!-- Terug zonder opslaan -->
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">@L["Common_BackToList"]</a>       <!-- Link terug naar lijst -->
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); // Client-side validation scripts
    }
}
