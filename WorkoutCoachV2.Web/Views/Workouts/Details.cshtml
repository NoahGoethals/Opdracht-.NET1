@model WorkoutCoachV2.Model.Models.Workout                        // Workout die je bekijkt
@using WorkoutCoachV2.Model.Models
@using System.Linq
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = L["Wk_Details_Title"];                    // Paginatitel

    // Controller stopt de gekoppelde oefeningen in ViewBag.WorkoutExercises
    var workoutExercises = ViewBag.WorkoutExercises as IEnumerable<WorkoutExercise>
                           ?? Enumerable.Empty<WorkoutExercise>(); // Als null: lege lijst
}

<h1>@L["Wk_Details_H1"]</h1>

<div>
    <h4>@L["Workouts"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@L["Wk_Field_Title"]</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Title)</dd>         <!-- Workout titel -->

        <dt class="col-sm-2">@L["Wk_Field_ScheduledOn"]</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.ScheduledOn)</dd>   <!-- Datum -->
    </dl>
</div>

<h4>@L["Wk_Details_ExercisesInWorkout"]</h4>
<hr />

@if (!workoutExercises.Any())
{
    <p>@L["Wk_Details_NoExercisesLinked"]</p>                      <!-- Geen oefeningen gelinkt -->
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>@L["Wk_Manage_Exercise"]</th>
                <th>@L["Wk_Manage_Reps"]</th>
                <th>@L["Wk_Manage_WeightKg"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in workoutExercises)
            {
                <tr>
                    <td>@x.Exercise?.Name</td>                     <!-- Naam van oefening -->
                    <td>@x.Reps</td>                               <!-- Reps -->
                    <td>@x.WeightKg</td>                           <!-- Gewicht -->
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-3">
    <a asp-action="Exercises" asp-route-id="@Model.Id" class="btn btn-secondary">@L["Wk_Details_ManageExercises"]</a> <!-- Beheer oefeningen -->
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">@L["Wk_Details_EditWorkout"]</a>            <!-- Edit workout -->
    <a asp-action="Index" class="btn btn-link">@L["Common_BackToList"]</a>                                            <!-- Terug naar lijst -->
</div>
