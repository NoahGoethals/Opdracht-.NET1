@model WorkoutCoachV2.Model.Models.Session

@{
    ViewData["Title"] = "Session details";
}

<h1>Session details</h1>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

@if (Model.Sets != null && Model.Sets.Any())
{
    <h4>Sets</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Set #</th>
                <th>Exercise</th>
                <th>Reps</th>
                <th>Weight (kg)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var set in Model.Sets.OrderBy(s => s.SetNumber))
            {
                <tr>
                    <td>@set.SetNumber</td>
                    <td>@set.Exercise?.Name</td>
                    <td>@set.Reps</td>
                    <td>@set.Weight</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p><em>No sets for this session yet.</em></p>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
