@model WorkoutCoachV2.Web.Models.SessionDetailsViewModel

@{
    ViewData["Title"] = "Session details";
}

<h1>Session details</h1>

<div class="mb-3">
    <h4>@Model.Title</h4>
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Description</dd>
        }
    </dl>
</div>

@if (Model.Workouts.Any())
{
    <h5>Workouts in this session</h5>

    @foreach (var w in Model.Workouts)
    {
        <h6 class="mt-3">@w.WorkoutTitle</h6>

        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Set</th>
                    <th>Exercise</th>
                    <th>Reps</th>
                    <th>Weight (kg)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in w.Sets)
                {
                    <tr>
                        <td>@s.SetNumber</td>
                        <td>@s.ExerciseName</td>
                        <td>@s.Reps</td>
                        <td>@s.Weight</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
else
{
    <p><em>No workouts detected for this session.</em></p>
}

@if (Model.ExtraSets.Any())
{
    <h5>Other sets</h5>

    <table class="table table-sm">
        <thead>
            <tr>
                <th>Set</th>
                <th>Exercise</th>
                <th>Reps</th>
                <th>Weight (kg)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model.ExtraSets)
            {
                <tr>
                    <td>@s.SetNumber</td>
                    <td>@s.ExerciseName</td>
                    <td>@s.Reps</td>
                    <td>@s.Weight</td>
                </tr>
            }
        </tbody>
    </table>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.SessionId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
