@model IEnumerable<WorkoutCoachV2.Model.Models.Session>

@{
    ViewData["Title"] = "Sessions";
}

<h1>Sessions</h1>

<p>
    <a asp-action="CreateFromWorkouts" class="btn btn-outline-secondary">New session from workouts</a>
</p>

@if (!Model.Any())
{
    <p class="text-muted">No sessions yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.Date)</th>
                <th>Sets</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(_ => item.Title)</td>
                    <td>@Html.DisplayFor(_ => item.Date)</td>
                    <td>@(item.Sets?.Count ?? 0)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
