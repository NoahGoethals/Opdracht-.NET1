@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L
@model IEnumerable<WorkoutCoachV2.Model.Models.Session>

@{
    // Titel + huidige filterwaarden uit ViewData (gezet in controller).
    ViewData["Title"] = L["Se_Index_Title"];

    var currentSearch = ViewData["Search"]?.ToString() ?? "";
    var currentFrom = ViewData["From"]?.ToString() ?? "";
    var currentTo = ViewData["To"]?.ToString() ?? "";
    var currentSort = ViewData["Sort"]?.ToString() ?? "date_desc";
}

<h1>@L["Se_Index_H1"]</h1>

<p>
    <!-- Knop om nieuwe sessie te maken. -->
    <a asp-action="Create" class="btn btn-primary">@L["Common_Create"]</a>
</p>

<!-- Filter/sort formulier via querystring (GET). -->
<form method="get" class="row g-2 align-items-end mb-3">
    <div class="col-md-4">
        <label class="form-label">@L["Common_Search"]</label>
        <input name="search" value="@currentSearch" class="form-control" />
    </div>

    <div class="col-md-2">
        <label class="form-label">@L["Common_From"]</label>
        <input type="date" name="from" value="@currentFrom" class="form-control" />
    </div>

    <div class="col-md-2">
        <label class="form-label">@L["Common_To"]</label>
        <input type="date" name="to" value="@currentTo" class="form-control" />
    </div>

    <div class="col-md-2">
        <label class="form-label">@L["Common_Sort"]</label>
        <select name="sort" class="form-select">
            <option value="date_desc" selected="@(currentSort == "date_desc" ? "selected" : null)">@L["Se_Field_Date"] (nieuwste)</option>
            <option value="date_asc" selected="@(currentSort == "date_asc" ? "selected" : null)">@L["Se_Field_Date"] (oudste)</option>
            <option value="title_asc" selected="@(currentSort == "title_asc" ? "selected" : null)">@L["Se_Field_Title"] (A→Z)</option>
            <option value="title_desc" selected="@(currentSort == "title_desc" ? "selected" : null)">@L["Se_Field_Title"] (Z→A)</option>
        </select>
    </div>

    <div class="col-md-2 d-flex gap-2">
        <!-- Apply: verzendt filters; Reset: terug naar Index zonder querystring. -->
        <button type="submit" class="btn btn-outline-primary w-100">@L["Common_Apply"]</button>
        <a asp-action="Index" class="btn btn-outline-secondary w-100">@L["Common_Reset"]</a>
    </div>
</form>

@if (Model == null || !Model.Any())
{
    <!-- Als er geen sessies zijn, toon een melding. -->
    <p class="text-muted">@L["Se_NoSessions"]</p>
}
else
{
    <!-- Tabel met sessies + acties. -->
    <table class="table">
        <thead>
            <tr>
                <th>@L["Se_Field_Title"]</th>
                <th>@L["Se_Field_Date"]</th>
                <th>@L["Se_Col_Sets"]</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Title</td>
                    <td>@s.Date.ToString("d")</td>
                    <td>@(s.Sets?.Count ?? 0)</td>
                    <td>
                        <!-- Navigatie-links naar details/edit/delete. -->
                        <a asp-action="Details" asp-route-id="@s.Id">@L["Common_Details"]</a> |
                        <a asp-action="Edit" asp-route-id="@s.Id">@L["Common_Edit"]</a> |
                        <a asp-action="Delete" asp-route-id="@s.Id">@L["Common_Delete"]</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
