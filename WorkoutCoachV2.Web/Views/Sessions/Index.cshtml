@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L
@model IEnumerable<WorkoutCoachV2.Model.Models.Session>

@{
    ViewData["Title"] = L["Se_Index_Title"];
}

<h1>@L["Se_Index_H1"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">@L["Common_Create"]</a>
</p>

@if (Model == null || !Model.Any())
{
    <p class="text-muted">@L["Se_NoSessions"]</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>@L["Se_Field_Title"]</th>
                <th>@L["Se_Field_Date"]</th>
                <th>@L["Se_Col_Sets"]</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.Title</td>
                    <td>@s.Date.ToString("d")</td>
                    <td>@(s.Sets?.Count ?? 0)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@s.Id">@L["Common_Details"]</a> |
                        <a asp-action="Edit" asp-route-id="@s.Id">@L["Common_Edit"]</a> |
                        <a asp-action="Delete" asp-route-id="@s.Id">@L["Common_Delete"]</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
